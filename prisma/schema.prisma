// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Tier {
  APPRENTICE
  JOURNEYMAN
  MASTER
  HERO
}

enum SubscriptionStatus {
  ACTIVE
  CANCELED
  PAST_DUE
  TRIALING
  INCOMPLETE
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  passwordHash  String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Subscription fields
  tier                   Tier               @default(APPRENTICE)
  stripeCustomerId       String?            @unique
  stripeSubscriptionId   String?            @unique
  subscriptionStatus     SubscriptionStatus?
  subscriptionStartDate  DateTime?
  successfulBillingCount Int                @default(0)
  currentPeriodEnd       DateTime?

  // AI usage fields
  aiUsageCount     Int       @default(0)
  aiUsageResetDate DateTime?

  // Relations
  accounts      Account[]
  sessions      Session[]
  progress      Progress[]
  consultations Consultation[]
  aiMessages    AiMessage[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// LMS Models
model Module {
  id           String  @id @default(cuid())
  title        String
  description  String?
  requiredTier Tier    @default(APPRENTICE)
  order        Int
  isPublished  Boolean @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  lessons Lesson[]

  @@map("modules")
}

model Lesson {
  id          String   @id @default(cuid())
  moduleId    String
  title       String
  content     String   @db.Text
  order       Int
  isPublished Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  module   Module     @relation(fields: [moduleId], references: [id], onDelete: Cascade)
  progress Progress[]

  @@map("lessons")
}

model Progress {
  id          String   @id @default(cuid())
  userId      String
  lessonId    String
  completedAt DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  lesson Lesson @relation(fields: [lessonId], references: [id], onDelete: Cascade)

  @@unique([userId, lessonId])
  @@map("progress")
}

// AI Message history
model AiMessage {
  id        String   @id @default(cuid())
  userId    String
  role      String   // 'user' | 'assistant'
  content   String   @db.Text
  tokens    Int      @default(0)
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("ai_messages")
}

// Consultation / Strategy Session
model Consultation {
  id             String    @id @default(cuid())
  userId         String
  tierAtPurchase Tier
  price          Int       // in cents
  stripeSessionId String?  @unique
  stripePaymentId String?
  purchasedAt    DateTime  @default(now())
  scheduledDate  DateTime?
  completed      Boolean   @default(false)
  discounted     Boolean   @default(false)
  calendarLink   String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("consultations")
}

// Stripe webhook events (idempotency)
model StripeEvent {
  id          String   @id // Stripe event ID
  type        String
  processedAt DateTime @default(now())

  @@map("stripe_events")
}
